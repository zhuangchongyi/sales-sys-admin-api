<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dc.project.basis.dao.SysMaterielFileDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.dc.project.basis.entity.SysMaterielFile">
        <id column="pk_id" property="pkId"/>
        <result column="create_time" property="createTime"/>
        <result column="create_by" property="createBy"/>
        <result column="materiel_id" property="materielId"/>
        <result column="file_name" property="fileName"/>
        <result column="name" property="name"/>
        <result column="url" property="url"/>
        <result column="path" property="path"/>
        <result column="remark" property="remark"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
            create_time,
            create_by,
        pk_id, materiel_id, file_name, name, url, path, remark
    </sql>
    <select id="findMaterielUrl" resultType="java.lang.String">
        select url from sys_materiel_file where materiel_id=#{id} order by create_time desc
    </select>
    <select id="oneMaterielUrl" resultType="java.lang.String">
        select url from sys_materiel_file where materiel_id=#{id} order by create_time desc limit 1
    </select>

</mapper>
